@model UsersInstructors

@{
    ViewData["Title"] = "EditRole";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1>EditRole</h1>

<h4>EditRoleViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @foreach (var editRoleViewModel in Model.EditRoleViewModels)
        {
            <form asp-action="EditRole">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="EditRoleViewModels[0].RoleId" class="control-label"></label>
                    <input asp-for="EditRoleViewModels[0].RoleId" readonly class="form-control" />
                    <span asp-validation-for="EditRoleViewModels[0].RoleId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EditRoleViewModels[0].RoleName" class="control-label"></label>
                    <input asp-for="EditRoleViewModels[0].RoleName" class="form-control" />
                    <span asp-validation-for="EditRoleViewModels[0].RoleName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="RoleList">Back to List</a>
                </div>
            </form>
        }
    </div>
</div>
<br />
<div class="card">
    <div class="card-header">
        Users in this role
    </div>
    <div class="card-body">
        @if (Model.EditRoleViewModels[0].Users.Any())
        {
            @foreach (var user in Model.EditRoleViewModels[0].Users)
            {
                <span>@user</span> <br />
            }
        }
        else
        {
            <div> No Users in this role</div>
        }
    </div>
    <div class="card-footer">
        <a asp-action="UserRole" asp-route-id="@Model.EditRoleViewModels[0].RoleId" class="btn btn-primary">Add/Remove User</a>
    </div>
</div>
