@model UsersInstructors

@{
    ViewData["Title"] = "RoleList";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1>Role List</h1>

<a asp-action="CreateRole" class="btn btn-success">New Role</a>
@foreach (var role in Model.IdentityRoles)
{
    <div class="card">
        <div class="card-header">
            @role.Id
        </div>
        <div class="card-body">
            @role.Name
        </div>
        <div class="card-footer">
            <a asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-warning">Edit</a>
            <a asp-action="DeleteRole" asp-route-id="@role.Id" class="btn btn-warning">Delete</a>
        </div>
    </div>
}
