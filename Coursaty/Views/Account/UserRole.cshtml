@model UsersInstructors

@{
    ViewData["Title"] = "UserRole";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1>UserRole</h1>

<form method="post" asp-action="UserRole">
    <div class="card">
        <div class="card-header">
            Users in this Role
        </div>
        <div class="card-body">
            @for (var i = 0; i < Model.UserRoleViewModels.Count; i++)
            {
                <div>
                    <input type="hidden" asp-for="UserRoleViewModels[i].UserId" />
                    <input type="hidden" asp-for="UserRoleViewModels[i].UserName" />

                    <input type="checkbox" asp-for="UserRoleViewModels[i].isSelected" />
                    <label> @Model.UserRoleViewModels[i].UserName</label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </div>
</form>
