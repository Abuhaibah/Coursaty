@model List<Coursaty.Models.ViewModels.AddUserViewModel>

<h1>User/Instructor Table</h1>

<div class="mb-3">

    <div class="mb-3">
        <a asp-action="UserInstructor" asp-route-role="Student" class="btn btn-primary">Student</a>
        <a asp-action="UserInstructor" asp-route-role="Instructor" class="btn btn-primary">Instructor</a>
    </div>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Email</th>
            <th>Mobile</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Mobile</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Role</td>
                <td>
                <td>
                    <a asp-action="Edit" asp-route-userId="@user.userId" class="btn btn-primary">Edit</a>
                    <a asp-action="Info" asp-route-userId="@user.userId" class="btn btn-info">Info</a>
                    <a asp-action="Delete" asp-route-userId="@user.userId" class="btn btn-danger">Delete</a>
                </td>
                </td>
            </tr>
        }
    </tbody>
</table>



