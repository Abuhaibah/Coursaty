@model Coursaty.Models.UsersInstructors

@{
    ViewData["Title"] = "EditCousre";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1>EditCousre</h1>

<h4>CourseViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCourse" asp-route-id="@Model.Courses[0].CourseId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @foreach (var course in Model.Courses)
            {
                <input type="hidden" asp-for="Courses[0].CourseId" />
                <div class="form-group">
                    <label asp-for="Courses[0].CourseName" class="control-label"></label>
                    <input asp-for="Courses[0].CourseName" class="form-control" />
                    <span asp-validation-for="Courses[0].CourseName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Courses[0].CourseDescription" class="control-label"></label>
                    <input asp-for="Courses[0].CourseDescription" class="form-control" />
                    <span asp-validation-for="Courses[0].CourseDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Courses[0].CourseStartDate" class="control-label"></label>
                    <input asp-for="Courses[0].CourseStartDate" class="form-control" />
                    <span asp-validation-for="Courses[0].CourseStartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Courses[0].CourseImg" class="control-label"></label>
                    <input asp-for="Courses[0].CourseImg" class="form-control" />
                    <span asp-validation-for="Courses[0].CourseImg" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Courses[0].CourseHours" class="control-label"></label>
                    <input asp-for="Courses[0].CourseHours" class="form-control" />
                    <span asp-validation-for="Courses[0].CourseHours" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Courses[0].InstructorName" class="control-label"></label>
                    <input asp-for="Courses[0].InstructorName" class="form-control" />
                    <span asp-validation-for="Courses[0].InstructorName" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="CourseList">Back to List</a>
</div>
