@model UsersInstructors

@{
    ViewData["Title"] = "CarouselList";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1>CarouselList</h1>

<p>
    <a asp-action="AddCarousel">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Image
            </th>
            <th>
                Title
            </th>
            <th>
                Subtitle
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CarouselItems)
        {
            <tr>
                <td>
                    <img src="data:image/jpeg;base64,@(item.ImageData)" alt="">
                </td>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Subtitle
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    <a asp-action="EditCarousel" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="DetailsCarousel" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="DeleteCarousel" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
